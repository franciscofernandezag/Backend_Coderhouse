<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>Admin</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <style>
        body {
            background-color: #96b1cc;
        }
    </style>
    <div class="container mt-4">
        <div class="text-right">
            <h3>Bienvenido, {{userName}}</h3>
            <h4>{{email}}</h4>
            <h5>Usted tiene permisos de: {{rol}}</h5>

            <form id="adminForm" action="/admin" method="GET" style="display: inline;">
                <button type="submit" class="btn btn-link">
                    <i class="fas fa-home fa-2x"></i>
                    <span class="badge badge-danger"></span>
                    <span>Home</span>
                </button>
            </form>
            <a href="/chat" class="btn btn-link">
                <i class="fas fa-comments fa-2x"></i>
                <span class="badge badge-danger"></span>
                <span>Chat</span>
            </a>
            <form action="/admin/adminUser" method="GET" style="display: inline;">
                <button type="submit" class="btn btn-link">
                    <i class="fas fa-user-cog fa-2x"></i>
                    <span>Administración de Usuarios</span>
                </button>
            </form>

            <form action="/admin/perfil" method="GET" style="display: inline;">
                <button type="submit" class="btn btn-link">
                    <i class="fas fa-user fa-2x"></i>
                    <span>Perfil</span>
                </button>
            </form>
        </div>

        <h1>Administración de Usuarios</h1>


        <div class="row">
            {{#each userList}}
            <div class="col-md-4 mt-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre: {{this.username}}</h5>
                        <!-- Cambio a 'username' en lugar de 'userName' -->
                        <p class="card-text"><strong>Correo:</strong> {{this.email}}</p>
                        <p class="card-text"><strong>Rol:</strong> {{this.rol}}</p>

                        {{#if this.userProfileImage}}
                        <img src="{{this.userProfileImage}}" alt="Imagen de perfil" class="img-fluid">
                        {{else}}
                        <i class="fas fa-user-circle fa-5x"></i>
                        <p>No hay foto de perfil.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}




        </div>
        <div id="message-container" class="text-center mt-4">
            {{#if message}}
            <script>
                Swal.fire({
                    title: "Mensaje",
                    text: `{{message}}`,
                    icon: "success",
                    timer: 3000,
                    timerProgressBar: true,
                    toast: true,
                    position: "top",
                    showConfirmButton: false
                });
            </script>
            {{/if}}
        </div>
        <div class="text-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {{#if response.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{response.prevLink}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{/if}}
                    {{#if response.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{response.nextLink}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
        <form action="/logout" method="get">
            <button type="submit" class="btn btn-danger">Cerrar sesión</button>
        </form>
        <div class="d-flex mt-4">
            <p class="mr-4"><strong>Status</strong>: {{response.status}}</p>
            <p class="mr-4"><strong>Total Páginas:</strong> {{response.totalPages}}</p>
            <p class="mr-4"><strong>Anterior:</strong> {{response.prevPage}}</p>
            <p class="mr-4"><strong>Próxima:</strong> {{response.nextPage}}</p>
            <p><strong>Actual:</strong> {{response.page}}</p>
        </div>
    </div>
    <script>
        document.getElementById('showAddProductFields').addEventListener('click', function () {
            document.getElementById('addProductFields').style.display = 'block';
        });
    </script>
    <script>
        function confirmDelete(productId) {
            const confirmation = confirm("¿Estás seguro que quieres eliminar este producto?");
            if (confirmation) {
                const form = document.querySelector(`form[action="/admin/products/${productId}/delete-product"]`);
                if (form) {
                    form.submit();
                }
            }
        }
    </script>
</body>

</html>