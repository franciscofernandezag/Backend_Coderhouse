<!-- home.handlebars -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Product List</title>
</head>
<body>
  <h1>Product List</h1>

 {{#if response.payload}}
  <ul>
    {{#each response.payload}}
      <li>
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Price: ${{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <img src="{{this.thumbnail}}" alt="{{this.title}}">
      </li>
    {{/each}}
  </ul>
  <!-- Resto del cÃ³digo -->
{{else}}
  <p>No products found.</p>
{{/if}}

</body>
</html>
